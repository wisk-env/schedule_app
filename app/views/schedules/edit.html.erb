<div class="schedule-create-container">   
  <h1 class="edit-main-title">予定を編集してください</h1>

  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% end %>

  <%= render "shared/error", obj: @schedule %>

  <%= form_with model: @schedule, local: true do |f| %>
    <table>
      <tr>
        <th><%= f.label :title, "タイトル" %></th>
        <td><%= f.text_field :title, class: "title-input-area" %></td>
      </tr>
      <tr>
        <th><%= f.label :start_date, "開始日" %></th>
        <td><%= f.date_field :start_date, class: "title-input-area" %></td>
      </tr>
      <tr>
        <th><%= f.label :end_date, "終了日" %></th>
        <td><%= f.date_field :end_date, class: "title-input-area" %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td>
            <%= f.check_box :all_day %>
            <%= "終日の場合はチェックを入れます" %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :memo, "スケジュールメモ" %></th>
        <td><%= f.text_area :memo, class: "schedule-memo-area" %></td>
      </tr>
    </table>
    <div class="form-container-button">
      <%= link_to "キャンセル", schedules_path, class: "btn btn-outline-secondary" %>
      <%= f.submit "保存", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>